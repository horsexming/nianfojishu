html,body{height:100%;}
 div,ul,li{ margin:0 auto; padding:0; list-style:none;  }
  html,body,h1,h2,h3,h4,h5,h6,div,dl,dt,dd,ul,ol,li,p,blockquote,pre,hr,figure,table,caption,th,td,form,fieldset,legend,input,button,textarea,menu{margin:0;padding:0;}
  img{ border:none;}
 a{ text-decoration:none;}
 a:hover{
text-decoration:none;
} 
body{margin:0;padding:0;width:100%;height:100%;background:#d6dedf url(../img/bodybg.png) no-repeat top center;overflow: hidden;}
.content{width:1200px;height:907px;background:url(../img/login.png) no-repeat top center;margin:0 auto;position:relative;}
.logo{width:312px;height:37px;position:absolute;top:40px;left:78px;}
.loginbox{width:569px;height:377px;border:1px solid #d8d7d7;border-radius:10px;background-color: #f8f8fa;position:absolute;top:180px;left:315px;}
.loginbox .logininfo{
	margin:70px 125px 40px 125px;
}
.form-item{
	width:100%;
	border-radius: 10px;
	border:1px solid #dbdbdb;
	margin:20px 0 0 0;
}
.form-item label{
  width:21px;	
  padding: 5px 10px;
  border-right: 1px solid #dbdbdb;
  margin: 5px 0px;
  display: inline-block;
}
.form-item input[type="text"],.form-item input[type="password"]{
  border: none;
  background: none;
  font-size: 18px;
  text-align: left;
  text-indent: 10px;
  outline: none;
}
.form-item  span{
	display: inline-block;
	font-size:14px;
}
.form-item.last{
	 border:none;
	 margin:0px 0 0 0;

}
.form-item .nobr{
	border-right: none;
}
.form-item input[type="submit"]{
	border:none;
	background-color: #f0725a;
	color:#ffffff;
	font-size:24px;
	text-align: center;
	border-radius: none;
	width:100%;
	padding:5px 0;
	outline: none;
}
.form-item input[type="button"]{
	border:none;
	background-color: #f0725a;
	color:#ffffff;
	font-size:24px;
	text-align: center;
	border-radius: none;
	width:100%;
	padding:5px 0;
	outline: none;
}
.footer{
	width:770px;
	height:50px;
	position:absolute;
	top:650px;
	left:315px;
}
.company{
	float: left;
}
.company h1{
	font-family: "microsoft yahei";
	font-size: 20px;
	line-height:28px;
	color:#4e4e4e;
	text-align: center;
}
.company h5{
	font-family: "microsoft yahei";
	font-size: 12px;
	color:#4e4e4e;
	text-align: center;
}
.copyright{
  float: left;
  margin-left:30px;
  display: inline;
}
.copyright h1{
	font-family: "microsoft yahei";
	font-size: 12px;
	line-height:28px;
	color:#4e4e4e;
}